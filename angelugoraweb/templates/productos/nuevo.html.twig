{# templates/productos/nuevo.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Nuevo Producto{% endblock %}

{% block main %}
    <div class="container mt-3 mb-5">
        <div class="card cardFormProductos shadow-lg">
            <div class="card-header cardFormProductos-header text-center">
                <h1 class="mb-0">Nuevo Producto</h1>
            </div>
            <div class="card-body">
                <form action="{{ path('producto_create') }}" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label for="nombre" class="form-label">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" class="form-control" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="precio" class="form-label">Precio:</label>
                        <input type="number" id="precio" name="precio" class="form-control" step="0.01" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="descripcion" class="form-label">Descripción:</label>
                        <textarea id="descripcion" name="descripcion" class="form-control" rows="4" required></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label for="categoria" class="form-label">Categoría:</label>
                        <select id="categoria" name="categoria" class="form-select" required>
                            {% for categoria in categorias %}
                                <option value="{{ categoria.id }}">{{ categoria.nombre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" id="novedad" name="novedad" class="form-check-input">
                        <label for="novedad" class="form-check-label">Es novedad</label>
                    </div>
                    <div class="form-group mb-3">
                        <label for="imagenPrincipal" class="form-label">Imagen Principal:</label>
                        <input type="file" id="imagenPrincipal" name="imagenPrincipal" class="form-control-file">
                    </div>
                    <div class="form-group mb-3">
                        <label for="imagenesAdicionales" class="form-label">Imágenes Adicionales:</label>
                        <input type="file" id="imagenesAdicionales" name="imagenesAdicionales[]" class="form-control-file" multiple>
                        <small id="imagenesAdicionalesHelp" class="form-text text-muted">Puedes seleccionar múltiples imágenes manteniendo presionada la tecla Ctrl (Cmd en Mac).</small>
                    </div>
                    <button type="submit" class="btn btnFormProductos btn-block">Crear Producto</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
