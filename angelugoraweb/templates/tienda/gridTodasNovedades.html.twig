{% extends 'base.html.twig' %}

{% block main %}
	<div class="contenidoTienda">
		<div class="contenedorBarraTienda">
			{% include 'tienda/navbar.html.twig' %}
		</div>
		<div class="container mt-4 contenedorContenidoTienda">
			<h1>Ultimas Novedades</h1>
			<div class="row mt-4">
				{% for producto in novedades %}
					<div class="col-lg-4 col-md-6 col-sm-12 mb-4">
						<div class="card">
							<a href="{{ path('producto_ver', {'id': producto.getId()}) }}">
								{% for foto in fotos %}
									{% if foto.getProducto().getId() == producto.getId() and foto.isPrincipal() %}
										<img src="{{ asset('imagenes/productos/' ~ foto.getNombre()) }}" class="card-img-top" alt="{{ producto.getNombre }}">
									{% endif %}
								{% endfor %}
								<div class="card-body">
									<h5 class="card-title" id="titulosSecundarios">{{ producto.getNombre() }}</h5>
									<p class="card-text" id="textosGenerales">{{ producto.getDescripcion() }}</p>
									<p class="card-text" id="textosGenerales">{{ producto.getPrecio() }}â‚¬</p>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
