{# gridCategoriasInicio.html.twig #}
<div class="card-container">
	{% if categorias is not empty %}
		{% for categoria in categorias|slice(0, 3) %}
			<div class="card">
				<h3>{{ categoria.nombre }}</h3>
				<p>{{ categoria.descripcion }}</p>
			</div>
		{% endfor %}

        <a href="{{ path('ver_todas_las_categorias') }}">Ver todas las categorías</a>
	{% else %}
		<div class="container-fluid">
			<div class="row justify-content-center align-items-center">
				<div class="card-container">
					<div class="card w-50 text-center">
						<p  id="textosGenerales2">No hay categorías disponibles en este momento.</p>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
</div>
