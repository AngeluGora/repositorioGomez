<div class="card-container">
    {% if novedades is not empty %}
        <div class="row">
            {% for producto in novedades|slice(0, 4) %}
                <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                    <div class="card">
                        {# <img src="{{ asset('uploads/productos/' ~ producto.imagen) }}" class="card-img-top" alt="{{ producto.nombre }}"> #}
                        <div class="card-body">
                            <a href="{{ path('producto_ver', {'id': producto.id}) }}">
                                <h5 class="card-title" id="titulosSecundarios">{{ producto.nombre }}</h5>
                                <p class="card-text" id="textosGenerales">{{ producto.descripcion }}</p>
                                <p class="card-text" id="textosGenerales">{{ producto.precio }}â‚¬</p>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('ver_todas_novedades') }}"><button>Ver todas las novedades</button></a>
    {% else %}
        <div class="container-fluid">
            <div class="row justify-content-center align-items-center">
                <div class="card-container">
                    <div class="card w-50 text-center">
                        <p id="textosGenerales2">No hay novedades disponibles en este momento.</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
